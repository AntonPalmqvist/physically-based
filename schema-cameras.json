{
  "$schema": "http://json-schema.org/schema",
  "title": "Camera",
  "description": "A camera.",
  "type": "array",
  "items": {
    "additionalProperties": false,
    "properties": {
      "name": {
        "description": "Name of the camera.",
        "type": "string",
        "default": "Name"
      },
      "sensorSize": {
        "description": "Sensor size in millimeters (WxH).",
        "type": "array",
        "items": {
          "type": "number"
        },
        "default": [36, 24],
        "minItems": 2,
        "maxItems": 2
      },
      "category": {
        "type": "array",
        "items": {
          "enum": ["Still", "Movie", "Mobile"]
        },
        "minItems": 1,
        "maxItems": 1
      },
      "description": {
        "type": "string",
        "maxLength": 400
      },
      "sources": {
        "type": "array",
        "items": {
          "type": "string",
          "minLength": 1
        },
        "minItems": 1,
        "uniqueItems": true
      },
      "tags": {
        "description": "Tags",
        "type": "array",
        "items": {
          "type": "string"
        },
        "uniqueItems": true
      }
    },
    "required": ["name", "sensorSize", "category", "description", "sources"]
  }
}
