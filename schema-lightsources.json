{
  "$schema": "http://json-schema.org/schema",
  "title": "Light",
  "description": "A light source.",
  "type": "array",
  "items": {
    "additionalProperties": false,
    "properties": {
      "name": {
        "description": "Name of the light source.",
        "type": "string",
        "default": "Name"
      },
      "temperature": {
        "description": "Color temperature in Kelvin.",
        "type": "number",
        "default": 6500
      },
      "power": {
        "type": "number",
        "default": 0
      },
      "unit": {
        "type": "array",
        "items": {
          "enum": ["lm", "lx", "cd/m2"]
        },
        "minItems": 1,
        "maxItems": 1
      },
      "category": {
        "type": "array",
        "items": {
          "enum": ["Artificial", "Natural"]
        },
        "minItems": 1,
        "maxItems": 1
      },
      "description": {
        "type": "string"
      },
      "sources": {
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "tags": {
        "description": "Tags",
        "type": "array",
        "items": {
          "type": "string"
        },
        "uniqueItems": true
      }
    },
    "required": [
      "name",
      "temperature",
      "power",
      "unit",
      "category",
      "description",
      "sources"
    ]
  }
}
