{
  "$schema": "http://json-schema.org/schema",
  "title": "Material",
  "description": "A PBR material.",
  "type": "array",
  "items": {
    "additionalProperties": false,
    "properties": {
      "name": {
        "description": "Name of the material.",
        "type": "string",
        "default": "Name"
      },
      "albedo": {
        "description": "Albedo RGB in decimal format in sRGB primaries.",
        "type": "array",
        "items": {
          "type": "number"
        },
        "default": [0.5, 0.5, 0.5],
        "minItems": 3,
        "maxItems": 3
      },
      "metalness": {
        "type": "number",
        "default": 0
      },
      "specular": {
        "type": "number",
        "default": 0.5
      },
      "ior": {
        "type": "number",
        "default": 1.5
      },
      "density": {
        "description": "Density measured in kg/m3.",
        "type": "number",
        "default": 1000
      },
      "densityRange": {
        "description": "The typical range of density.",
        "type": "array",
        "items": {
          "type": "number"
        },
        "default": [1000, 1000],
        "minItems": 2,
        "maxItems": 2
      },
      "category": {
        "type": "array",
        "items": {
          "enum": [
            "Metals",
            "Liquids",
            "Crystals",
            "Organic",
            "Human",
            "Calibration",
            "Plastics",
            "Gas",
            "Manmade"
          ]
        },
        "minItems": 1,
        "maxItems": 1
      },
      "description": {
        "type": "string"
      },
      "sources": {
        "type": "array",
        "items": {
          "type": "string",
          "minLength": 1
        },
        "minItems": 1,
        "uniqueItems": true
      },
      "tags": {
        "description": "Tags",
        "type": "array",
        "items": {
          "type": "string"
        },
        "uniqueItems": true
      }
    },
    "required": [
      "name",
      "albedo",
      "metalness",
      "specular",
      "ior",
      "density",
      "category",
      "description",
      "sources"
    ]
  }
}
